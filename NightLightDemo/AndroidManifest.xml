<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nightlightdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon72x72"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.nightlightdemo.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.nightlightdemo.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.nightlightdemo.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.nightlightdemo.NightlightActivity"
            android:label="@string/title_activity_nightlight" >
        </activity>
        <activity
            android:name="com.example.nightlightdemo.PlayActivity"
            android:label="@string/title_activity_play" >
        </activity>
    </application>

</manifest>
